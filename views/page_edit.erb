<h1>Edit <i><%= @edit_page['name'] %></i></h1>

<form action="/pages/edit/<%= @edit_page['slug'] %>" class="form-inline" method="POST">
<div class="row">
<div class="col-lg-3">
  <label for="name">Slug</label><br>
  <div class="input-group">   
  <input type="text" value="<%= @edit_page['slug'] %>" class="form-control" name="slug">
    </div>
</div>
<div class="col-lg-3">
  <label for="name">Name</label><br>
  <div class="input-group">   
  <input type="text" value="<%= @edit_page['name'] %>" class="form-control" name="name">
    </div>
</div>
<div class="col-lg-3">
  <label for="name">Headline</label><br>
  <div class="input-group">   
  <input type="text" value="<%= @edit_page['headline'] %>" class="form-control" name="headline">
    </div>
</div>
<div class="col-lg-3">
  <label for="name">Title</label><br>
  <div class="input-group">   
  <input type="text" value="<%= @edit_page['title'] %>" class="form-control" name="title">
    </div>
</div>
</div>
<div class="row">
<div class="col-lg-6">
  <label for="name">Excerpt</label><br>
  <div class="input-group" style="width:100%">   
  <input type="text" value="<%= @edit_page['excerpt'] %>" class="form-control" name="excerpt" style="width:100%">
    </div>
</div>
<div class="col-lg-6">
  <label for="name">Tags</label><br>
  <div class="input-group" style="width:100%">   
  <input type="text" value="<%= @edit_page['tags'] %>" class="form-control" name="tags">
    </div>
</div>
</div>
<div class="row">
    <div class="col-lg-12">
         <label for="name">Content</label><br>
  <div class="input-group" style="width:100%">   
  <input type="text" value="<%= @edit_page['content'] %>" class="form-control" name="content" >
    </div>
</div>
    </div>

  <button type="submit" class="btn btn-default">Save page</button>
</form>
